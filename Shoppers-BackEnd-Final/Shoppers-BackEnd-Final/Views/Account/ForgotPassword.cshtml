@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}

<main>
    <section class="forgotPassword">
        <div class="container">
            <div class="row">
                <div class="forgot text-center mt-5">
                    <i class="fa-solid fa-key"></i>
                    <h3 class="mt-3">Forgot password?</h3>
                    <p class="mt-3">No worries,we'll send you reset instructions</p>
                    <form class="mx-auto text-start mt-4" asp-action="forgot" method="post">
                        <div class="mb-3 mx-auto col-lg-3 col-12">
                            <label for="exampleInputEmail1" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="forgotBtn d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary  col-lg-3 col-12">Reset Password</button>

                        </div>


                    </form>


                </div>

                <div class="backToLogin d-flex justify-content-center align-items-center mt-3">
                    <i class="fa-solid fa-arrow-left me-3"></i>
                    <a href="login.html">Back to log in</a>
                </div>
            </div>
        </div>


    </section>



</main>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}