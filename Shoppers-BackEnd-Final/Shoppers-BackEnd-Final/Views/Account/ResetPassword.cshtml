@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
}


<main>
    <section class="confirmPassword">
        <div class="container">
            <div class="row">
                <div class=" col-lg-12 confirm text-center mt-5">
                    <i class="fa-solid fa-key"></i>

                    <h3 class="mt-3">Set a new password</h3>
                    <p class="mt-3">Your new password must be different to previously used passwords</p>


                    <form class="row g-3 mt-3" asp-action="changepassword" method="post">

                        <input name="token" type="hidden" value="@Model.Token" />
                        <input name="email" type="hidden" value="@Model.Email" />

                        <div class="col-lg-3">
                            <label for="inputPassword4" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" id="inputPassword4">
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>

                        <div class="col-lg-3 mt-3">
                            <label for="inputPassword4" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="inputPassword4">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        </div>

                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>


                        <button type="submit" class="btn btn-primary col-lg-3 col-12 mt-3">Reset password</button>

                    </form>







                </div>

                <div class="backToLogin d-flex justify-content-center align-items-center mt-5">
                    <i class="fa-solid fa-arrow-left me-3"></i>
                    <a href="login.html">Back to log in</a>
                </div>
            </div>
        </div>


    </section>
</main>


@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

